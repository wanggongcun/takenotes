<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_horizontal"
    android:layout_margin="2dp"
    android:background="#3399FF"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/mark_control"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
       	android:layout_margin="2dp"
	    android:orientation="horizontal" >
    
	<TextView 
        android:id="@+id/tv_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="描述" />
    <EditText 
        android:id="@+id/et_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="描述" />
	</LinearLayout>
    <CheckBox 
        android:id="@+id/cb_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:gravity="center"
       	android:layout_margin="2dp"
        android:text="当前屏幕范围"/>
    
    <LinearLayout 
        android:id="@+id/latitude_control"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
       	android:layout_margin="2dp"
	    android:orientation="horizontal" >
    
    <TextView 
        android:id="@+id/tv_latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="纬度" />
    <EditText 
        android:id="@+id/et_latitude_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textSize="20dp"
        android:text="纬度小" />
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="--" />
    <EditText 
        android:id="@+id/et_latitude_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textSize="20dp"
        android:text="纬度大" />
	</LinearLayout>
    
    <LinearLayout 
        android:id="@+id/longitude_control"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
       	android:layout_margin="2dp"
	    android:orientation="horizontal" >
    
	<TextView 
        android:id="@+id/tv_longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="经度" />
    <EditText 
        android:id="@+id/et_longitude_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textSize="20dp"
        android:text="经度小" />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="--" />
    <EditText 
        android:id="@+id/et_longitude_max"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:textSize="20dp"
        android:text="经度大" />
	</LinearLayout>
	
    <LinearLayout 
        android:id="@+id/line_control"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        	android:layout_margin="2dp"
	    android:orientation="horizontal" >
    
	<TextView 
        android:id="@+id/tv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="行距" />
    <EditText 
        android:id="@+id/et_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:textSize="20dp"
        android:text="100" />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="米" />
	</LinearLayout>
    <LinearLayout 
        android:id="@+id/row_control"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        	android:layout_margin="2dp"
	    android:orientation="horizontal" >
    
	<TextView 
        android:id="@+id/tv_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="列距" />
    <EditText 
        android:id="@+id/et_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:textSize="20dp"
        android:text="100" />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="米" />
	</LinearLayout>
	
  	 <LinearLayout 
	      android:layout_width="match_parent"
   		  android:layout_height="wrap_content"
   		  android:orientation="horizontal"
	      android:layout_alignParentBottom="true"
          >
	  	  <Button android:id="@+id/bt_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
        	android:layout_margin="5dp"
			android:drawableLeft="@drawable/save_64"
			android:background="@drawable/shape"
	        android:text="确定" />
	    <Button android:id="@+id/bt_cancle"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_toRightOf="@+id/btnok"
	        android:layout_weight="1"
        	android:layout_margin="5dp"
	        android:drawableLeft="@drawable/cancle_64"
	        android:background="@drawable/shape"
	        android:text="取消" /> 
	 </LinearLayout>

</LinearLayout>
